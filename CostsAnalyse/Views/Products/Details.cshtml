<button onclick="GetCompany(event)"></button>
<button onclick="GetGraph(event)"></button>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://d3js.org/d3.v3.min.js"> </script>
<script type="text/javascript">
window.onscroll = function() {
  var scrolled = window.pageYOffset || document.documentElement.scrollTop; 
  if((scrolled>0)&&(document.getElementsByClassName("prices").length ==0)){
      GetCompany(event)
  }
  if((scrolled>200)&&(document.getElementsByClassName("statOfPrice").length==0)){
      GetGraph(event);
  }
}

var height = 500; 
var width = 500;
var margin = 25; 
var offset = 10;   
var svg;

           function GetGraph(e) {
            e.preventDefault();
            urlArray = window.location.href.split("/");
            index = urlArray[urlArray.length-1];
            ajaxUrl = "/api/Price/"+index;
            $.ajax({
                type: "GET",
                url: ajaxUrl,
                cache: false,
                contentType: false,
                method: "GET",
                processData: false,
                success: function (data) {
                    
                   data =  data[0].price;
             
                    createAxes(data);
                },
                error: function (err) {

                }
            });
        };
function createAxes(rawData){
    var div =  document.createElement("div");
    div.setAttribute("class","statOfPrice");
    document.getElementsByClassName("infoblock")[0].append(div);
    data=[];
   
    svg = d3.select(".statOfPrice").append("svg")
    .attr("class", "axis")
    .attr("width", width)
    .attr("height", height); 

    var xAxisLength = width - 2 * margin;     
  
  var yAxisLength = height - 2 * margin;
     
  var scaleX = d3.time.scale()
                .domain([
                new Date(rawData[0].date.split("-")[0],rawData[0].date.split("-")[1]),
                new Date()])
                .domain([new Date(2015, 0, 1),new Date()])
                .range([0, xAxisLength]);
  var scaleY = d3.scale.linear()
                 .domain([100, 0])
                .range([0, yAxisLength]);
   
                for(i=0; i<rawData.length; i++){
    data.push({x: scaleX(new Date(rawData[0].date.split("-")[0],rawData[0].date.split("-")[1]),0)+margin, y: scaleY(rawData[0].cost) + margin});
            }
              
  var xAxis = d3.svg.axis()
               .scale(scaleX)
               .orient("bottom") 
               .ticks(4)
               .tickFormat(d3.time.format('%m.%y'))
               ;    
  var yAxis = d3.svg.axis()
               .scale(scaleY)
               .orient("left");
             
  svg.append("g")       
       .attr("class", "x-axis")
       .attr("transform",   
           "translate(" + margin + "," + (height - margin) + ")")
      .call(xAxis);
               
  svg.append("g")       
      .attr("class", "y-axis")
      .attr("transform",  
              "translate(" + margin + "," + margin + ")")
      .call(yAxis);
    
  d3.selectAll("g.x-axis g.tick")
      .append("line") 
      .classed("grid-line", true)  
      .attr("x1", 0)
      .attr("y1", 0)
      .attr("x2", 0)
      .attr("y2", - (yAxisLength));
      
  d3.selectAll("g.y-axis g.tick")
      .append("line")
      .classed("grid-line", true)
      .attr("x1", 0)
      .attr("y1", 0)
      .attr("x2", xAxisLength)
      .attr("y2", 0);
      var line = d3.svg.line()
            .x(function(d){return d.x;})
            .y(function(d){return d.y;}); 
            

var g = svg.append("g");
    g.append("path")
    .attr("d", line(data))
    .style("stroke", "steelblue")
    .style("stroke-width", 2);

g.append("text")
    .attr("x", (width / 2))
    .attr("y", margin - 10 )
    .attr("text-anchor", "middle")
    .style("font-size", "22px")
    .text("Graph of changing cost");
 
g.append("text")
    .attr("x", margin + 11)
    .attr("y", margin - 11)
    .attr("text-anchor", "end")
    .style("font-size", "11px")
    .text("Money");
 
g.append("text")
    .attr("x", width - margin + 11)
    .attr("y", height - margin - 5)
    .attr("text-anchor", "end")
    .style("font-size", "11px")
    .text("Date"); 
svg.selectAll(".dot")
    .data(data)
    .enter().append("circle")
    .attr("class", "dot")
    .attr("r", 3.5)
    .attr("cx", function(d) { return scaleX(d.x)+margin; })
    .attr("cy", function(d) { return scaleY(d.y)+margin; });
}
</script>
<script>
    function GetCompany(e) {
            e.preventDefault();
            urlArray = window.location.href.split("/");
            index = urlArray[urlArray.length-1];
            ajaxUrl = "/api/Price/"+index;
            $.ajax({
                type: "GET",
                url: ajaxUrl,
                cache: false,
                contentType: false,
                method: "GET",
                processData: false,
                success: function (data) { 
                  var price = data[0].lastPrice[0];
                  var urlImage = "";
                  if(price.company.name=="Rozetka"){
                     urlImage="<img src=\"https://taradajko.com/wp-content/uploads/2016/11/unnamed.png\">";
                  }
                  var src = "<a href="+price.company.url+">"+urlImage+"</a>"
                  var table = `
                  <table border=\"1\"><caption>Цены</caption>
                <tr><th>Company</th><th>Prices</th><th>Date</th></tr>
                <tr>
           
                <td>`+src+`</td>
                  <td>`+price.cost+`</td>
               <td>`+price.date +` </td>
               </tr>
            </table>`;
                  var div = "<div class=\"prices\">"+table+"</div>"
                  document.getElementsByClassName("infoblock")[0].innerHTML = div;
                },
                error: function (err) {

                }
            });
        };
</script>